<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="GroupDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Dialog.Button.Style" parent="layout_wrap">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">@dimen/abc_action_button_min_height_material</item>
        <item name="android:background">@drawable/dialog_button_bg</item>
        <item name="android:textSize">@dimen/abc_text_size_menu_material</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
    </style>
</resources>
