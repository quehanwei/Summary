<?xml version="1.0" encoding="utf-8"?>
<mesh.csrmesh.view.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NetWorkKeyActivity">


    <mesh.csrmesh.view.PercentRelativeLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@drawable/head_bottom_line">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="NETWORK KEY"
            app:layout_widthPercent="50%"
            app:textSizePercent="40%h"/>

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back"
            app:layout_paddingLeftPercent="3%w"
            app:layout_paddingRightPercent="3%w"/>
    </mesh.csrmesh.view.PercentRelativeLayout>


    <mesh.csrmesh.view.EditTextWithDel
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_below="@id/nav"
        android:background="@drawable/edit_input_bg"
        android:hint="plase input network key"
        android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
        android:paddingRight="@dimen/abc_dropdownitem_text_padding_right"
        android:password="true"
        android:singleLine="true"
        app:layout_marginTopPercent="6%h"/>


    <mesh.csrmesh.view.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/nextstep"
            android:layout_width="0dp"
            android:layout_height="@dimen/abc_action_button_min_height_material"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:background="@drawable/button_bg"
            android:padding="@dimen/abc_button_padding_horizontal_material"
            android:gravity="center"
            android:text="NEXT"
            app:layout_widthPercent="30%"/>
    </mesh.csrmesh.view.PercentRelativeLayout>


</mesh.csrmesh.view.PercentRelativeLayout>